    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script>
        let map, currentBaseLayer;
        const baseMaps = {
            'osm': L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {maxZoom: 18, attribution: 'Â© OSM'}),
            'satellite': L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {maxZoom: 18}),
            'terrain': L.tileLayer('https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png', {maxZoom: 18})
        };
       
        map = L.map('map', {layers: [baseMaps.osm], center: [-24.373676, -65.112939], zoom: 17});  
        currentBaseLayer = baseMaps.osm;
       
        // Marcador escuela âœ…
        L.marker([-24.373676, -65.112939]).addTo(map).bindPopup(`
            <div style="text-align:center; min-width:280px; font-family:Arial;">
                <h3 style="color:#2c3e50;">ğŸ« ESCUELA PROFESIONAL N 6</h3>
                <p><strong>CUE:</strong> 380061200 | <strong>ğŸ“:</strong> 388-4914677</p>
                <p><strong>ğŸ“:</strong> 20 de Junio 110, Santa Rosa, Perico</p>
                <p><strong>âœ‰ï¸:</strong> <a href="mailto:escprof66@hotmail.com">escprof66@hotmail.com</a></p>
                <button onclick="window.open('https://google.com/maps?q=-24.373676,-65.112939')" 
                        style="background:#e74c3c;color:white;border:none;padding:10px 20px;border-radius:6px;cursor:pointer;width:100%;margin-top:10px;">
                    ğŸš— Google Maps
                </button>
            </div>
        `);

        // CÃ­rculo 500m âœ…
        L.circle([-24.373676, -65.112939], {
            color: '#3498db', fillColor: '#F52749', fillOpacity: 0.3, radius: 500
        }).addTo(map);

        // Geocodificador
        L.Control.geocoder({defaultMarkGeocode: true, position: 'topleft'}).addTo(map);
       
        // Cambio mapas
        function changeBaseMap(type) {
            map.removeLayer(currentBaseLayer);
            currentBaseLayer = baseMaps[type];
            currentBaseLayer.addTo(map);
            document.querySelectorAll('.map-buttons button').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }
       
        // Mi UbicaciÃ³n âœ…
        map.on('locationfound', e => {
            L.marker(e.latlng).addTo(map).bindPopup(
                `âœ… Â¡EstÃ¡s aquÃ­!<br>
                ğŸ“ ${e.latlng.lat.toFixed(6)}, ${e.latlng.lng.toFixed(6)}<br>
                ğŸ“ ${Math.round(map.distance(e.latlng, [-24.373676, -65.112939]))}m del colegio`
            ).openPopup();
        });
        map.on('locationerror', () => alert('âŒ GPS bloqueado. Activa ubicaciÃ³n.'));
    </script>
